#include <PRIZM.h>
PRIZM prizm;

void setup() {
  prizm.PrizmBegin();
}
  
void loop() {
if(prizm.readSonicSensorCM(3)>15){
  GreenLED();
  PulseMotor();
}else{
  SweepServo();
}
}

//Blink green LED
void GreenLED(){
  prizm.setGreenLED(HIGH);
  delay(250);
  prizm.setGreenLED(LOW);
  delay(250);
}

//Pulse Motor
void PulseMotor(){
 prizm.setMotorPower(1,50);
 delay(1000);
 prizm.setMotorPower(1,0);
 delay(1000);
} 

//Sweep Servo
void SweepServo(){
  prizm.setServoPosition(1,180);
  delay(500);
  prizm.setServoPosition(1,0);
  delay(500);
  }
